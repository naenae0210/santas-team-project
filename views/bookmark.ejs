
<style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }

    @media (min-width: 768px) {
        .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }
    }
</style>

<body>

    <main>

        <section class="py-5 text-center container">
            <div class="row py-lg-0">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">북마크</h1>
                </div>
            </div>
        </section>

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <% if (bookmarks.length == 0) { %>
                        <div style="align-items: center;">
                            <h1>설정한 북마크가 없습니다.</h1>
                        </div>
                    <% } %>
                    <% bookmarks.forEach(b => { %>
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="/mountain/image/<%= b.mountain.number %>" alt="" style="width: 100%; height: 250px; object-fit: cover;" />

                                <div class="card-body">
                                    <p class="card-text">
                                        <%= b.mountain.name %>
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary"><a href="/mountainInfo/<%= b.mountain.number %>">View</a></button>
                                        </div>
                                        <form action="/bookmark/<%= b.mountain.number %>/delete" method="post" onsubmit="switchHeart(this.id)">
                                            <input type="submit" id="<%= b.mountain.number %>" class="btn fa-input" value="&#xf004" style="color:red"/>
                                        </form>
                                     </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>

    </main>


</body>

<script>
    function switchHeart(clickedId) {
        var defaultHeart = document.getElementById(clickedId);
        
        defaultHeart.style.color = "black";
    }
</script>