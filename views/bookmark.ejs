
<style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }

    @media (min-width: 768px) {
        .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }
    }
</style>

<body>

    <main>

        <section class="py-5 text-center container">
            <div class="row py-lg-0">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">북마크</h1>
                </div>
            </div>
        </section>

        <div class="album py-5 bg-light">
            <div class="buttons">
                <div class="dropdown region">
                    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">지역</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/mountain/서울">서울</a>
                        <a class="dropdown-item" href="/mountain/경기">경기도</a>
                        <a class="dropdown-item" href="/mountain/인천">인천</a>
                        <a class="dropdown-item" href="/mountain/강원">강원도</a>
                        <a class="dropdown-item" href="/mountain/충청">충청도</a>
                        <a class="dropdown-item" href="/mountain/대전">대전</a>
                        <a class="dropdown-item" href="/mountain/전라">전라도</a>
                        <a class="dropdown-item" href="/mountain/광주">광주</a>
                        <a class="dropdown-item" href="/mountain/경상">경상도</a>
                        <a class="dropdown-item" href="/mountain/대구">대구</a>
                        <a class="dropdown-item" href="/mountain/울산">울산</a>
                        <a class="dropdown-item" href="/mountain/부산">부산</a>
                        <a class="dropdown-item" href="/mountain/제주">제주도</a>
                    </div>
                </div>
                <div class="dropdown hard">
                    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">난이도</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/mountain/difficulty/상">상</a>
                        <a class="dropdown-item" href="/mountain/difficulty/중">중</a>
                        <a class="dropdown-item" href="/mountain/difficulty/하">하</a>
                    </div>
                </div>
            </div>
            <div class="container">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <% bookmarks.forEach(b => { %>
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="/mountain/image/<%= b.mountain.number %>" alt="" style="width: 100%; height: 250px; object-fit: cover;" />

                                <div class="card-body">
                                    <p class="card-text">
                                        <%= b.mountain.name %>
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary"><a href="/mountainInfo/<%= b.mountain.number %>">View</a></button>
                                        </div>
                                        <form action="/bookmark/<%= b.mountain.number %>/<%= user.id %>/delete" method="post" onsubmit="switchHeart(this.id)">
                                            <input type="submit" id="<%= b.mountain.number %>" class="btn fa-input" value="&#xf004" />
                                        </form>
                                        <% const heart = document.getElementById(b.mountain.number); %>
                                        <% heart.style.color = "red"; %>
                                     </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>

    </main>


</body>

<script>
    function switchHeart(clickedId) {
        var defaultHeart = document.getElementById(clickedId);
        
        defaultHeart.style.color = "black";
    }
</script>