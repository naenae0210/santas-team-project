<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">

<link rel="stylesheet" href="/css/reg.css">

<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form action="/users/create" method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-pin-account"></i></label>
                                <input type="text" name="name" id="name" placeholder="Your Name"/>
                            </div>
                            <div class="form-group">
                                <label for="nickname"><i class="zmdi zmdi-star-outline"></i></label>
                                <input type="text" name="nickname" id="nickname" placeholder="Your Nickname"/>
                            </div>
                            <div class="form-group">
                                <label for="birth"><i class="zmdi zmdi-calendar"></i></label>
                                <input type="date" name="birth" id="birth" placeholder="ex)19000130"/>
                            </div>                    
                            <div class="form-group">
                                <label for="id"><i class="zmdi zmdi-account"></i></label>
                                <input type="text" name="id" id="id" placeholder="ID"/>
                            </div>
                            <div class="form-group">
                                <label for="password"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="password" placeholder="Password"/>
                            </div>
                            
                           
                            <div class="form-group form-button">
                                <button type="submit" name="signup" id="signup" class="btn-primary btn" value="Register">Submit</button>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/users/login" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>

</body>

<script src="/js/main.js"></script>
