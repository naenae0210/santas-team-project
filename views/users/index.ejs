<div class="container-fluid">

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Birth</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <td>
          <a href="<%=`/users/${user.id}`%>">
            <%= user.id %>
          </a>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.birth %>
        </td>
        <td>
          <a class="btn btn-outline-success" href="<%=`/users/${user.id}/edit`%>">
            Edit
          </a>
        </td>
        <td>
          <form action="<%=`users/${user.id}/delete`%>" method="post">
            <input type="hidden" name="id" value="<%= user.id %>">
            <input type="submit" name="Delete" value="Delete" class="btn btn-outline-success"
              onClick="alert('Are yout sure you want to delete this record?')">
          </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>

  <div>
    <a button class="btn btn-outline-success" href="/users/new">Create</a>
  </div>

</div>
