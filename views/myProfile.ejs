<body class="bg-light">

<div class="container">
  <main>
    <div class="py-5 text-center">
      <h2>Edit Profile</h2>

    </div>


      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">My Profile</h4>
        <form class="needs-validation" novalidate>
          <div class="row g-3">
            <div class="col-12">
              <label for="Name" class="form-label">Name</label>
              <input type="text" class="form-control" id="Name" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid Name is required.
              </div>
            </div>

            <div class="col-12">
              <label for="Nickname" class="form-label">Nickname</label>
              <input type="text" class="form-control" id="Nickname" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid Nickname is required.
              </div>
            </div>

            <div class="col-12">
              <label for="b-day" class="form-label">Birthday</label>
              <input type="text" class="form-control" id="b-day" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid Birthday is required.
              </div>
            </div>

            <div class="col-12">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" placeholder="you@example.com">
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>

            <div class="col-12">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" placeholder="you@example.com">
              <div class="invalid-feedback">
                Please enter a valid password
              </div>
            </div>

          </div>

          <hr class="my-4">

          <button class="w-100 btn btn-primary btn-lg" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </main>


  </body>