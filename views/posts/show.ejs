<div class="container-fluid">
  <div class="card">
    <h5 class="card-header p-2"><%= post.title %></h5>
    <div class="row">
      <div class="col-md-7 col-lg-8 col-xl-9 order-sm-2 order-md-1">
        <div class="post-body p-2"><%= post.detail %></div>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <a class="btn btn-outline-success" href="/posts">Back</a>
  </div>
</div>



  <div class="container-fluid">
	<table class="table table-striped" id="tb">
	<thead>
	<tr>
	
        <th scope="col">Comment</th>
        <th scope="col">Date</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
        </tr>
    	</thead>
	<tbody>
          
          <% comments.forEach(comment=> { %> 
            <tr>
               <td>
		<%= comment.commentDetail %>
	       </td>
               <td>
                <%= comment.createdAt %>
               </td>
	        <td>
          	<a class="btn btn-outline-success" href="<%=`/comments/${comment.commentNum}/edit`%>"> Edit  </a>
                </td>

 <td>
 <% if (loggedIn && comment.userId == currentUser.id)  { %>
          <form action="/comments/<%=comment.commentNum%>/delete" method="post"> 
            <input type="submit" name="Delete" value="Delete" class="btn btn-outline-success"
              onClick="alert('Are yout sure you want to delete this record?')">
          </form>
<% } %>
        </td>
             </tr>            

          <% }) %>
	</tbody>
</table>




<% if (loggedIn) { %>
  <div class="data-form">
    <form class="form-post" action="<%=`/comments/${post.id}/create`%>" method="post">

      <div class="form-group">
        <label for="commentDetail">Comment</label>
        <textarea id="commentDetail" name="commentDetail" class="form-control" placeholder="commentDetail"></textarea>
      </div>

      <div>
        <button type="submit" class="btn btn-outline-success">Create</button>
      </div>

    </form>
  </div>
<% } %>

