
  <table class="table table-striped" id="tb">
    <thead>
      <tr>
        <th scope="col">Post Num</th>
        <th scope="col">Title</th>
        <th scope="col">Date</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% posts.forEach(post => { %>
      <tr>
        <td>
          <%= post.id %>
        </td>
        <td>
          <a href="<%= `/posts/${post.id}` %>">
            <%= post.title %>
          </a>
        </td>
        <td>
          <%= post.createdAt %>
        </td>
        <td>
          <% if (loggedIn && post.userId == currentUser.id) { %>
            <a class="btn btn-outline-success" href="<%=`/posts/${post.id}/edit`%>">
              Edit
            </a>
          <% } %>
        </td>
        <td>
          <% if (loggedIn && post.userId == currentUser.id) { %>
            <form action="<%=`posts/${post.id}/delete`%>" method="post">
              <input type="hidden" name="id" value="<%= post.id %>">
              <input type="submit" name="Delete" value="Delete" class="btn btn-outline-success"
                onClick="alert('Are you sure you want to delete this record?')">
            </form>
          <% } %>
        </td>
      </tr>
      <% }) %>
    </tbody>

  </table>
</br>
  <% if (loggedIn) { %>
    <div class="align-items-end">
      <a class="btn btn-outline-success" href="/posts/new" type="submit">New</a>
    </div>
  <% } %>

